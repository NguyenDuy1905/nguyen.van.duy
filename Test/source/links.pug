include modules/_page-list/_page-list
include modules/head/head
include modules/header/header
include modules/button/button
include modules/title/title
include modules/blog-element/blog-element
include modules/quote/quote
include modules/product/product
include modules/footer/footer

doctype html
html
  +head(head.home)
  body
    //- [Header]
    +header
    //- [Intro]
    section.intro
      .container
        .intro__wrap.clearfix
          .intro__product.text-center
            img.intro__image.intro__image--small(src="../images/Oil.png", alt="")
            h1.intro__name Green Vera
            h3.intro__description Sản phẩm tinh dầu dưỡng da mới nhất của Mandala
            h2.intro__rate Giá chỉ
              span 750.000
                sup đ
            +button("MUA HÀNG")
          img.intro__image.intro__image--big(src="../images/A-girl.png", alt="")
    //- [Promotion]
    section.promotion
      .container
        ul.promotion__list.clearfix
          li.promotion__element
            img.promotion__icon(src="images/plane-icon.png", alt="")
            p.promotion__text Miễn phí vận chuyển
          li.promotion__element
            img.promotion__icon(src="images/gift-icon.png", alt="")
            p.promotion__text Nhận ngay quà tặng trị giá 350.000đ
          li.promotion__element
            img.promotion__icon(src="images/star-icon.png", alt="")
            p.promotion__text Giảm 30% cho đơn hàng trên 5.000.000đ
    //- [Banner]
    section.banner
      .container
        .row.banner__row
          .banner__col.col-md-6
            .row.banner__row
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner1.jpg", alt="")
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner9.jpg", alt="")
                  +title-style('SỮA TẮM')
                  .arrow.arrow-left.banner__arrow.banner__arrow--left
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner10.jpg", alt="")
                  +title-style('NƯỚC HOA')
                  .arrow.arrow-right.banner__arrow.banner__arrow--right
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner2.jpg", alt="")
          .banner__col.col-md-6
            .banner__item
              img.banner__images.banner__images--big(src="images/banner3.jpg", alt="")
        .row.banner__row.banner__row--reverse
          .banner__col.col-md-6
            .banner__item
              img.banner__images.banner__images--big(src="images/banner4.jpg", alt="")
          .banner__col.col-md-6
            .row.banner__row
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner8.jpg", alt="")
                  +title-style('TRANG SỨC')
                  .arrow.arrow-left.banner__arrow.banner__arrow--left
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner5.jpg", alt="")
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner6.jpg", alt="")
              .banner__col.col-md-6.col-6
                .banner__item
                  img.banner__images.banner__images--small(src="images/banner7.jpg", alt="")
                  .arrow.arrow-right.banner__arrow.banner__arrow--right
    //- [Slider]
    section.slider
      .container
        .owl-carousel.owl-theme.js-slider
          .item
            +quote("images/slider1.jpg", "Vẫn là vẻ bề ngoài vô cùng đơn giản với các tông màu trắng, hồng làm chủ đạo nhưng lại tạo ra sức hút kỳ lạ với những ai cầm trên tay sản phẩm ấy! Với công nghệ cải tiến mới nhất, hãng Rohto", "TUTILE", "Giám đốc phát triển sản phẩm")
          .item
            +quote("images/slider1.jpg", "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum gravida at libero in placerat. Duis tempor, nisl sed congue luctus, nulla neque accumsan eros, sed molestie ex dolor et massa", "TUTILE", "Giám đốc phát triển sản phẩm")
          .item
            +quote("images/slider1.jpg", "Vẫn là vẻ bề ngoài vô cùng đơn giản với các tông màu trắng, hồng làm chủ đạo nhưng lại tạo ra sức hút kỳ lạ với những ai cầm trên tay sản phẩm ấy! Với công nghệ cải tiến mới nhất, hãng Rohto", "TUTILE", "Giám đốc phát triển sản phẩm")
    //- [Product-Slider]
    .product-slider
      .container
        ul.product-slider__menu
          li.product-slider__list
            a.product-slider__link(href="")
              +title-style("Sản phẩm mới")
          li.product-slider__list.product-slider__list--active
            a.product-slider__link(href="")
              +title-style("Sản phẩm bán chạy")
          li.product-slider__list
            a.product-slider__link(href="")
              +title-style("Sản phẩm đặc biệt")
        .product-slider__tab
          ul.product-slider__filter
            - var list = ['Mỹ phẩm', 'Chăm sóc da', 'Dành cho tóc', 'Nước hoa', 'Trang sức', 'Quà tặng']
            each item in list
              li.product-slider__item
                a.product-slider__link(href="") #{item}
          .owl-carousel.owl-theme.js-product-slider
            .item
              +product("images/product1.png", "OHUI", "Mỹ phẩm châu Âu", "355.000", "450.000")
            .item
              +product("images/product2.png", "HOME", "Mỹ phẩm châu Âu", "355.000", "450.000")
            .item
              +product("images/product3.png", "DEBORA", "Mỹ phẩm châu Âu", "355.000", "450.000")
            .item
              +product("images/product4.png", "SARVON", "Mỹ phẩm châu Âu", "355.000", "450.000")
            .item
              +product("images/product1.png", "OHUI", "Mỹ phẩm châu Âu", "355.000", "450.000")
            .item
              +product("images/product2.png", "HOME", "Mỹ phẩm châu Âu", "355.000", "450.000")
    //- [Follow]
    section.follow
      .container
        ul.follow__list.text-center
          li.follow__item.follow__item--facebook
            a.follow__link(href="")
              span.follow__wrap-icon
                i.fa.fa-facebook.follow__icon(aria-hidden="true")
              | FACEBOOK
          li.follow__item.follow__item--twitter
            a.follow__link(href="")
              span.follow__wrap-icon
                i.fa.fa-twitter.follow__icon(aria-hidden="true")
              | TWITTER
          li.follow__item.follow__item--instagram
            a.follow__link(href="")
              span.follow__wrap-icon
                i.fa.fa-instagram.follow__icon(aria-hidden="true")
              | INSTAGRAM
          li.follow__item.follow__item--google
            a.follow__link(href="")
              span.follow__wrap-icon
                i.fa.fa-google-plus.follow__icon(aria-hidden="true")
              | GOOGLE
          li.follow__item.follow__item--pinterest
            a.follow__link(href="")
              span.follow__wrap-icon
                i.fa.fa-pinterest-p.follow__icon(aria-hidden="true")
              | PINTEREST
          li.follow__item.follow__item--info
            a.follow__link(href="")
              span.follow__wrap-icon
                i.fa.fa-info.follow__icon(aria-hidden="true")
              | LINKEDIN
