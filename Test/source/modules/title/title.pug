mixin title-size-12(titleName)
  .title-size-12
    h6.title-size-12__name #{titleName}
    
mixin title-size-14(titleName)
  .title-size-14
    p.title-size-14__name #{titleName}

mixin title-size-16(titleName)
  .title-size-16
    h4.title-size-16__name #{titleName}

mixin title-size-18(titleName)
